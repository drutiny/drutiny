<div class="row result-group py-3">
  <div class="col">

    <table class="table table-hover">
      <thead>
        <tr class="table-active">
          <th scope="col">Policy</th>
          <th scope="col">Severity</th>
          <th scope="col">Audit</th>
        </tr>
      </thead>
      <tbody>
        {% for result in assessment.results|filter(r => r.getType != 'notice') %}
          <tr class="{% if result.isFailure %}has-failure{% elseif result.isSuccessful %}has-success{% elseif result.hasWarning %}has-warning{% else %}has-error{% endif %}">
            <th><a href="#{{ result.policy.name }}">{{ result.policy.title }}</a></th>
            <td>{{ result.policy.severity.value|capitalize }}</td>
            <td class="control-label">{{ result.type|split('-')|join(' ')|title  }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

  </div>
</div>
