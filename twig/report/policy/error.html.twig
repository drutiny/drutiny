<div class="row result-group py-3">
  <div class="col">

    <h3 id="{{ audit_response.policy.name }}">{{ audit_response.policy.title }}</h3>
    {# We don't attempt to render this because it may not contain the required variables. #}
    {{ audit_response.policy.description | markdown_to_html }}

    <div class="card text-white bg-primary mb-3 assessment-card">
      <div class="badge badge-primary"><span class="fa fa-ban" aria-hidden="true"></span> Error</div>
      <div class="card-body alert-primary">
        <p class="card-text">
        This policy was unable to determine the state of {{ audit_response.policy.title }}.
        </p>
        {% if audit_response.tokens.exception is defined %}
        <pre>
          <code>
            {{ audit_response.tokens.exception }}
          </code>
        </pre>
        {% endif %}
      </div>
    </div> <!-- /assessment-card -->

  </div> <!-- /col -->
</div> <!-- /row -->
