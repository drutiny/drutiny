<div class="row result-group">
  <div class="col">
    <h4 id="{{ audit_response.policy.name }}"><span class="text-warning">&#9888;</span> {{ audit_response.policy.title }}</h4>
    {{ include(template_from_string(audit_response.policy.description | mustache2twig )) | markdown_to_html }}

    <div class="card border-warning mb-3">
      <div class="card-header">Warning</div>
      <div class="card-body">
        <div class="card-text">
        {% with audit_response.tokens %}
        {{ include(template_from_string(audit_response.policy.warning | mustache2twig)) | markdown_to_html }}
        {% endwith %}

        {% if audit_response.hasWarning %}
        <div class="alert alert-warning" role="alert">
          {% with audit_response.tokens %}
          {{ include(template_from_string(audit_response.policy.warning | mustache2twig)) | markdown_to_html }}
          {% endwith %}
        </div>
        {% endif %}
        </div>
      </div>
    </div>

  </div>
</div>
